@model HospitalOficialCRUD.Models.Pacientes;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Crear Pacientes</h2>
        <form asp-controller="Pacientes" asp-action="Nuevo" method="post" >
            <div class="mb-3">
                <label>Rut Paciente</label>
                <input class="form-control" asp-for="RutPaciente" type="text" />
            </div>
            <div class="mb-3">
                <label>Nombre Paciente</label>
                <input class="form-control" asp-for="NombrePaciente" type="text" />
            </div>
            <div class="mb-3">
                <label>Apellido Paciente</label>
                <input class="form-control" asp-for="ApellidoPaciente" type="text" />
            </div>
            <div class="mb-3">
                <label>Direccion Paciente</label>
                <input class="form-control" asp-for="DireccionPaciente" type="text" />
            </div>
            <div class="mb-3">
                <label>Fecha Nacimiento Paciente</label>
                <input class="form-control" asp-for="FechaNacimiento" type="date" />
            </div>
            <div class="mb-3">
                <label>Fono Paciente</label>
                <input class="form-control" asp-for="FonoPaciente" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar paciente</button>
                <a asp-controller="Pacientes" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>
